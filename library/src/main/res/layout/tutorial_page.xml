<?xml version="1.0" encoding="utf-8"?>
<merge
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<FrameLayout
		android:id="@+id/page_illustrations"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>


	<LinearLayout
		android:id="@+id/page_footer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:clipToPadding="false"
		android:orientation="vertical"
		android:paddingBottom="16dp"
		android:paddingLeft="@dimen/tutorial_text_lateral_padding"
		android:paddingRight="@dimen/tutorial_text_lateral_padding"
		android:paddingTop="16dp"
		>

		<TextView
			android:id="@+id/page_title"
			style="@style/Base.TextAppearance.AppCompat.Title.Inverse"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			tools:text="Titolo della pagina"/>

		<TextView
			android:id="@+id/page_subtitle"
			style="@style/Base.TextAppearance.AppCompat.Subhead.Inverse"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:lines="2"
			tools:text="Titolo della pagina"/>
	</LinearLayout>


	<Space
		android:layout_width="match_parent"
		android:layout_height="72dp"/>

</merge>